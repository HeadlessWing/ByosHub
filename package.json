{
  "name": "byos-hub",
  "private": true,
  "version": "1.1.0",
  "description": "BYOS (Build Your Own Standard) Deck Builder",
  "author": "Antigravity",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "start:electron": "electron .",
    "build:electron": "vite build && electron-builder",
    "build:packager": "vite build && electron-packager . byos-hub --platform=win32 --arch=x64 --out=dist-packager --overwrite --icon=public/icon.ico",
    "build:mac": "vite build && electron-packager . byos-hub --platform=darwin --arch=x64 --out=dist-packager --overwrite",
    "test": "vitest run",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "electron-packager": "^17.1.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "png-to-ico": "^3.0.1",
    "vite": "^7.2.4",
    "vitest": "^4.0.17"
  }
}