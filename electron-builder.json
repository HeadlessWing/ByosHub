{
    "appId": "com.antigravity.byoshub",
    "productName": "BYOS Hub",
    "directories": {
        "output": "dist-electron"
    },
    "files": [
        "dist/**/*",
        "electron/**/*",
        "package.json"
    ],
    "mac": {
        "target": "dmg",
        "icon": "public/icon.png"
    },
    "win": {
        "target": "nsis",
        "icon": "public/icon.ico"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true
    }
}